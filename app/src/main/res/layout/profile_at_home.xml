<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/margin20"
    app:cardElevation="@dimen/margin10"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="false"
    app:cardBackgroundColor="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/id_dp_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/id_buttons_layout"
            app:cardCornerRadius="@dimen/margin20"
            app:cardElevation="@dimen/margin20">
            <ImageView
                android:id="@+id/id_profile_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_model"
                android:scaleType="centerCrop"
                android:background="@color/black"/>
            <TextView
                android:id="@+id/id_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin20"
                android:paddingVertical="5dp"
                android:paddingHorizontal="@dimen/margin10"
                android:text="She likes you!"
                android:textColor="@color/white"
                android:background="@drawable/background_round_10_filled"
                android:backgroundTint="@color/black"
                android:layout_gravity="center_horizontal"/>

            <RelativeLayout
                android:id="@+id/id_profile_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin20"
                android:layout_gravity="bottom">
                    <TextView
                        android:id="@+id/id_name_and_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tamara_25"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/id_work"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sr. UX Researcher at Tesla"
                        android:textStyle="normal"
                        android:textColor="@color/white"
                        android:layout_below="@id/id_name_and_age"/>
                <TextView
                    android:id="@+id/id_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="@dimen/margin10"
                    android:text="2.5km"
                    android:textColor="@color/white"
                    android:background="@drawable/background_round_10_filled"
                    android:backgroundTint="@color/black"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/id_buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:clipToPadding="false"
                android:layout_weight="1">
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardElevation="@dimen/margin10"
                    app:cardCornerRadius="100dp"
                    app:cardBackgroundColor="@color/white" >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/margin15"
                        android:src="@drawable/ic_close_24"
                        app:tint="@color/loveRed" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:clipToPadding="false"
                android:layout_weight="1">
                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardElevation="@dimen/margin15"
                    app:cardCornerRadius="100dp"
                    app:cardBackgroundColor="@color/white" >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/margin20"
                        android:src="@drawable/ic_heart_24"
                        android:background="@drawable/gradient_main"
                        app:tint="@color/white"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:clipToPadding="false"
                android:layout_weight="1">
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardElevation="@dimen/margin10"
                    app:cardCornerRadius="100dp"
                    app:cardBackgroundColor="@color/white" >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/margin10"
                        android:src="@drawable/ic_chat_24"
                        app:tint="@color/loveBlue" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>